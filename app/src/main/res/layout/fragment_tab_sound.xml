<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TabSound" >

    <RelativeLayout
        android:id="@+id/rl_sound"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageButton
            android:id="@+id/btn_soundmode"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/btn_soundpower"
            android:layout_marginLeft="194dp"
            android:background="@drawable/btn_style_tymode" />

        <ImageButton
            android:id="@+id/btn_soundpower"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="272dp"
            android:layout_marginTop="47dp"
            android:layout_toRightOf="@+id/btn_soundmode"
            android:background="@drawable/btn_style_typower" />

        <RelativeLayout
            android:id="@+id/imageView2"
            android:layout_width="250dp"
            android:layout_height="220dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="75dp"
            android:layout_marginLeft="26dp"
            android:layout_toRightOf="@+id/btn_soundmode"
            android:layout_gravity="center"
            android:background="@drawable/imgview_kedu" >

            <com.txy.view.WheelMenu
                android:id="@+id/wheelMenu"
                android:layout_width="200dp"
                android:layout_height="200dp" />
            
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>