<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetModeFragment" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_bttitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/view_modeset"
            android:orientation="vertical"
            android:padding="10.0dp" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/view_btbg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/modename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="2dp"
                android:text="灯光设置"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <GridView
                android:id="@+id/gd_btlightset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:numColumns="5" >
            </GridView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="2dp"
                android:text="窗帘设置"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <GridView
                android:id="@+id/gd_btwindowsset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:numColumns="5" >
            </GridView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="2dp"
                android:text="空调设置"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <GridView
                android:id="@+id/gd_btairset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:numColumns="5" >
            </GridView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="2dp"
                android:text="电视设置"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <GridView
                android:id="@+id/gd_bttvset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:numColumns="5" >
            </GridView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ywtitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/view_modeset"
            android:orientation="vertical"
            android:padding="10.0dp" >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/view_ywbg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ywset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="2dp"
                android:text="灯光设置"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <GridView
                android:id="@+id/gd_lightset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:numColumns="5" >
            </GridView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="2dp"
                android:text="窗帘设置"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <GridView
                android:id="@+id/gd_windowsset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:numColumns="5" >
            </GridView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="2dp"
                android:text="空调设置"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <GridView
                android:id="@+id/gd_airset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:numColumns="5" >
            </GridView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="2dp"
                android:text="电视设置"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <GridView
                android:id="@+id/gd_ywtvset1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:numColumns="5" >
            </GridView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>